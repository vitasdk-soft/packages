pkgname=libmathneon
pkgver=9999
pkgrel=1
url="https://github.com/vitasdk-soft/math-neon"
source=("git+https://github.com/vitasdk-soft/math-neon.git")
sha256sums=('SKIP')

build() {
  cd math-neon
  make -j$(nproc)
}

package () {
  mkdir -p $pkgdir/$VITASDK/arm-vita-eabi/lib
  mkdir -p $pkgdir/$VITASDK/arm-vita-eabi/include

  cd math-neon
  cp libmathneon.a $pkgdir/$VITASDK/arm-vita-eabi/lib/
  cp source/math_neon.h $pkgdir/$VITASDK/arm-vita-eabi/include/
}
